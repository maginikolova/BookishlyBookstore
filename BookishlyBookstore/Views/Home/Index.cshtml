@model HomeViewModel

<br /><h2>@Model.Title</h2><br />

@foreach(var book in Model.Books)
{
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
            <img src="@book.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@book.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id">@book.Name</a>
                </h3>
                <p>@book.ShortDescription</p>
            </div>
        </div>
    </div>
}